    <!-- Team Section Scroll Animation Script -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cards = Array.from(document.querySelectorAll(".member-card"));

            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry) => {
                    const el = entry.target;
                    const idx = cards.indexOf(el);
                    const delay = idx * 120; // stagger delay (ms) — adjust as you like

                    // clear any pending timer for this element
                    if (el._animTimer) {
                        clearTimeout(el._animTimer);
                        el._animTimer = null;
                    }

                    if (entry.isIntersecting) {
                        // animate in with a small stagger
                        el._animTimer = setTimeout(() => {
                            el.style.opacity = "1";
                            el.style.transform = "translateY(0)";
                            el._animTimer = null;
                        }, delay);
                    } else {
                        // reset so it can animate again next time
                        // cancel pending animation and immediately reset
                        el.style.opacity = "0";
                        el.style.transform = "translateY(30px)";
                    }
                });
            }, { threshold: 0.2 });

            // observe every card
            cards.forEach(card => {
                // ensure initial hidden state (in case markup changed)
                card.style.opacity = card.style.opacity || "0";
                card.style.transform = card.style.transform || "translateY(30px)";
                card.style.transition = card.style.transition || "all 0.6s ease";
                observer.observe(card);
            });
        });
    </script>

    <!-- Testimonial Slider Script -->
    <script>
        let currentIndex = 0;
        const testimonials = document.querySelectorAll(".testimonial");
        const dots = document.querySelectorAll('section div[style*="margin-top:15px"] span');

        function showTestimonial(nextIndex) {
            if (nextIndex === currentIndex) return;

            const current = testimonials[currentIndex];
            const next = testimonials[nextIndex];

            // Slide current out left
            current.style.transform = "translateX(-100%)";
            current.style.opacity = "0";

            // Slide next in from right
            next.style.transform = "translateX(0)";
            next.style.opacity = "1";

            // Reset all others to right for next cycle
            testimonials.forEach((t, i) => {
                if (i !== currentIndex && i !== nextIndex) {
                    t.style.transform = "translateX(100%)";
                    t.style.opacity = "0";
                }
            });

            // Update dots
            dots.forEach((dot, i) => {
                dot.style.backgroundColor = i === nextIndex ? "#007bff" : "#ccc";
            });

            currentIndex = nextIndex;
        }

        function nextTestimonial() {
            let nextIndex = (currentIndex + 1) % testimonials.length;
            showTestimonial(nextIndex);
        }

        let autoSlide = setInterval(nextTestimonial, 3000);

        dots.forEach((dot, index) => {
            dot.addEventListener("click", () => {
                clearInterval(autoSlide);
                showTestimonial(index);
                autoSlide = setInterval(nextTestimonial, 3000);
            });
        });
    </script>

