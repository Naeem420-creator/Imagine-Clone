            } else {
                // Reset when out of viewport
                if (direction === "left") {
                    img.style.transform = "translateX(-100px)";
                } else {
                    img.style.transform = "translateX(100px)";
                }
                img.style.opacity = "0";
            }
        }

        window.addEventListener('scroll', function () {
            handleScrollAnimation("feedback-img-1", "left");
